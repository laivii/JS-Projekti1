function mark(){
    let state = this.checked;
    let task = this.parentElement;

    if( state == false){
            task.style.color = "black";
            task.style.textDecoration = "none";

        /*let x = document.getElementsByClassName("done")[this];
            x.setAttribute("class", "notdone");

        tasksDone();
        tasksNotDone();*/

        return;
    }

    task.style.color = "lightgrey";
    task.style.textDecoration = "line-through";

    /*let x = document.getElementsByClassName("notdone")[this];
        x.setAttribute("class", "done");
        
    tasksDone();
    tasksNotDone();*/
}

